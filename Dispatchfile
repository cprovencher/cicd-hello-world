#!mesosphere/dispatch-starlark:v0.6

load("github.com/mesosphere/dispatch-catalog/starlark/stable/pipeline@0.0.6", "git_resource", "git_checkout_dir", "pull_request")
load("github.com/cprovencher/import-dispatch-task-test/lints@ce9659d0485069b34d16cbdcfa9f0fa7de120df7", "shellcheck")

source_repo = git_resource("sources")

do_shellcheck = shellcheck("shellcheck", git_input=source_repo, paths=["script.sh"])

action(tasks=[do_shellcheck], on=pull_request())

